---
import {Image} from "astro:assets";

export interface Props {
    image: any;
    title: string;
    category: string;
    description: string;
    url?: string;
    team: string;
}

const {image, title, category, description, url, team} = Astro.props;
---

<div class="experience-card bg-gradient-to-br from-[#1E2028] to-[#2A2D3A] rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-700/50 hover:border-purple-500/50">
    <!-- Mobile Layout: Image on top -->
    <div class="block md:hidden">
        <!-- Image Container Mobile -->
        <div class="relative overflow-hidden">
            <div class="aspect-video w-full h-40">
                <Image
                        src={image}
                        alt={title}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
            </div>
            <!-- Category badge overlay -->
            <div class="absolute top-3 left-3">
                            <span class="bg-purple-600/90 backdrop-blur-sm text-white text-xs font-semibold px-2.5 py-1 rounded-full">
                                {category}
                            </span>
            </div>
        </div>

        <!-- Content Mobile -->
        <div class="p-4 flex flex-col">
            <h3 class="text-lg font-bold text-white mb-2 hover:text-purple-300 transition-colors duration-300">
                {title}
            </h3>

            <div class="flex items-center mb-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
                <span class="text-xs text-gray-400 font-medium">{team}</span>
            </div>

            <p class="text-gray-300 text-sm leading-relaxed mb-4 flex-grow">
                {description}
            </p>
            {
                url && (
                            <a
                                    href={url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium text-sm rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/25 group/btn"
                            >
                                <span>Visit Site</span>
                                <svg class="ml-2 w-4 h-4 group-hover/btn:translate-x-1 transition-transform duration-300"
                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                )
            }

        </div>
    </div>

    <!-- Desktop Layout: Image on left -->
    <div class="hidden md:flex h-full">
        <!-- Image Container Desktop -->
        <div class="relative overflow-hidden w-64 lg:w-80 flex-shrink-0 h-full">
            <Image
                    src={image}
                    alt={title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
            <!-- Category badge overlay -->
            <div class="absolute top-3 left-3">
                            <span class="bg-purple-600/90 backdrop-blur-sm text-white text-xs font-semibold px-2.5 py-1 rounded-full">
                                {category}
                            </span>
            </div>
        </div>

        <!-- Content Desktop -->
        <div class="flex-1 p-6 lg:p-8 flex flex-col justify-between h-full">
            <div>
                <h3 class="text-xl lg:text-2xl font-bold text-white mb-3 hover:text-purple-300 transition-colors duration-300">
                    {title}
                </h3>

                <div class="flex items-center mb-4">
                    <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
                    <span class="text-sm text-gray-400 font-medium">{team}</span>
                </div>

                <p class="text-gray-300 text-base leading-relaxed mb-6">
                    {description}
                </p>
            </div>

            {url && (
                    <a
                            href={url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-medium text-base rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/25 group/btn"
                    >
                        <span>Visit Site</span>
                        <svg class="ml-2 w-5 h-5 group-hover/btn:translate-x-1 transition-transform duration-300"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
            )}

        </div>
    </div>
</div>

<style>
    .experience-card {
        width: 100%;
        max-width: 320px;
        min-height: 350px;
        margin: 0 auto;
    }

    /* Desktop wider layout */
    @media (min-width: 768px) {
        .experience-card {
            width: 600px;
            max-width: 45vw;
            height: 350px;
            margin: 0;
        }
    }

    @media (min-width: 1024px) {
        .experience-card {
            width: 700px;
            max-width: 45vw;
            height: 350px;
        }
    }

    .experience-card:hover {
        transform: translateY(-8px);
    }
</style>