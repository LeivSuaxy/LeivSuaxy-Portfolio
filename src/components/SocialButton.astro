---
// SocialButton.astro
export interface Props {
    icon: any;
    href: string;
    label: string;
    colorClass?: string;
}
const { icon: Icon, href, label, colorClass = "text-gray-100" } = Astro.props;
---

<a href={href} target="_blank" rel="noopener" class="button {colorClass}">
    <Icon />      <!-- el SVG ahora hereda `currentColor` -->
    <span class="text">{label}</span>
</a>

<style>
    .button {
        display: flex;
        align-items: center;
        gap: 0.75rem;      /* 12px */
        padding: 0.625rem 0.9375rem; /* 10px 15px */
        background: transparent;
        outline: 3px #343841 solid;
        outline-offset: -3px;
        border: none;
        border-radius: 0.3125rem; /* 5px */
        cursor: pointer;
        transition: background-color 0.4s;
    }
    .button .text {
        font-weight: 700;
        font-size: 1rem;
        transition: color 0.4s;
    }
    /* ahora el SVG se colorea por currentColor, as√≠ que no necesitas selector extra */
    .button:hover {
        background-color: #ffffff20;
    }
    .button:hover {
        color: #f6f6f6;   /* esto afecta tanto al texto como al icono */
    }
</style>
