---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import XIcon from "./icons/XIcon.astro";
const githubImageUrl = "Perfil.jpeg";
---

<section id="main" class="flex flex-col min-h-screen items-center justify-center bg-[#13151A] text-center md:text-left p-6 gap-6">
    <!-- Contenedor combinado de texto e imagen -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <!-- Imagen -->
        <div class="flex-none relative w-72 h-72">
            <!-- Skeleton loader -->
            <div class="absolute inset-0 rounded-full bg-gray-700 animate-pulse"></div>

            <!-- Actual image -->
            <img
                    src={githubImageUrl}
                    alt="Your profile picture"
                    class="w-72 h-72 rounded-full shadow-lg opacity-0 transition-opacity duration-300 absolute inset-0"
                    onload="this.classList.remove('opacity-0')"
            />
        </div>
        <!-- Texto -->
        <div class="max-w-md">
            <h1 class="text-4xl font-bold text-gray-100 mb-4">
                Hi, I'm LeivSuaxy
            </h1>
            <h2 class="text-2xl font-bold text-gray-100 mb-2">
                Backend Web Developer
            </h2>
            <p class="text-sm text-gray-500 mb-4">
                2+ years as a software developer
            </p>
            <p class="text-lg text-gray-400 mb-4">
                As a backend web developer, I thrive on building reliable APIs and services,
                while also creating scripts that automate repetitive tasks and streamline operations.
                I’m passionate about writing clean, maintainable code and architecting solutions that scale effortlessly as
                projects grow.
            </p>
        </div>
    </div>

    <a
            href="/Javier%20Leiva%20-%20CV.pdf"
            download
            class="px-4 py-2 cv bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors flex items-center gap-2"
    >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        Download CV
    </a>

    <div class="flex flex-col items-center mt-50">
        <p class="text-sm text-gray-500 mb-2">See more</p>
        <div class="animate-bounce cursor-pointer" onclick="window.scrollBy({top: window.innerHeight * 0.8, behavior: 'smooth'})">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400 hover:text-purple-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </div>
    </div>
</section>

<style>
    .cv {
    display: flex;
    align-items: center;
    gap: 0.75rem;      /* 12px */
    padding: 0.625rem 0.9375rem; /* 10px 15px */
    background: transparent;
    outline: 3px #343841 solid;
    outline-offset: -3px;
    border: none;
    border-radius: 0.3125rem; /* 5px */
    cursor: pointer;
    transition: background-color 0.4s;
}
.cv .text {
    font-weight: 700;
    font-size: 1rem;
    transition: color 0.4s;
}
/* ahora el SVG se colorea por currentColor, así que no necesitas selector extra */
.cv:hover {
    background-color: #ffffff20;
    color: #f6f6f6;
}
</style>
