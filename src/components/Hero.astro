---
import SocialButton from "./SocialButton.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import XIcon from "./icons/XIcon.astro";
const githubImageUrl = "https://github.com/LeivSuaxy.png";

const socialItems = [
    {
        icon: GitHubIcon,
        href: "https://github.com/LeivSuaxy",
        label: "GitHub"
    },
    {
        icon: LinkedinIcon,
        href: "https://www.linkedin.com/in/leivsuaxy",
        label: "LinkedIn"
    },
    {
        icon: XIcon,
        href: " ",
        label: "Twitter",
    }
];
---

<section class="flex flex-col min-h-screen items-center justify-center bg-[#13151A] text-center md:text-left p-6 gap-6">
    <!-- Contenedor combinado de texto e imagen -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6">
        <!-- Imagen -->
        <div class="flex-none relative w-72 h-72">
            <!-- Skeleton loader -->
            <div class="absolute inset-0 rounded-full bg-gray-700 animate-pulse"></div>

            <!-- Actual image -->
            <img
                    src={githubImageUrl}
                    alt="Your profile picture"
                    class="w-72 h-72 rounded-full shadow-lg opacity-0 transition-opacity duration-300 absolute inset-0"
                    onload="this.classList.remove('opacity-0')"
            />
        </div>
        <!-- Texto -->
        <div class="max-w-md">
            <h1 class="text-4xl font-bold text-gray-100 mb-4">
                Hi, I'm LeivSuaxy
            </h1>
            <h2 class="text-2xl font-bold text-gray-100 mb-2">
                Backend Web Developer
            </h2>
            <p class="text-sm text-gray-500 mb-4">
                2+ years as a software developer
            </p>
            <p class="text-lg text-gray-400 mb-4">
                As a backend web developer, I thrive on building reliable APIs and services,
                while also creating scripts that automate repetitive tasks and streamline operations.
                Iâ€™m passionate about writing clean, maintainable code and architecting solutions that scale effortlessly as
                projects grow.
            </p>
        </div>
    </div>

    <!-- Botones sociales debajo -->
    <div class="flex flex-row gap-4 mt-4">
        {
            socialItems.map((item) => (
                    <SocialButton icon={item.icon} href={item.href} label={item.label} />
            ))
        }
    </div>
</section>
