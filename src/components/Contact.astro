---
import ProjectIcon from "./icons/ProjectIcon.astro";
import MailIcon from "./icons/MailIcon.astro";---

<section id="contact" class="py-16 px-4 max-w-6xl mx-auto">
    <div class="flex items-center justify-center gap-4 mb-6">
        <MailIcon/>
        <h1 class="text-4xl font-bold text-gray-100">
            Contact Me
        </h1>
    </div>
    <div class="bg-[#1E2028] rounded-lg shadow-lg p-8 md:p-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
            <!-- Motivational Text Section -->
            <div class="space-y-6">
                <h2 class="text-3xl font-bold mb-4 text-white">Let's get in touch</h2>
                <p class="text-lg text-gray-300 leading-relaxed">
                    Do you have an idea for a project? Are you looking for a developer to collaborate?
                    I am always interested in listening to new proposals and challenges.
                    Share your ideas and see how we can work together to make them come true.
                </p>
                <div class="pt-4">
                    <p class="text-purple-400 font-medium">Ready to start your next project?</p>
                    <p class="text-gray-300">Let's connect and bring your ideas to life!</p>
                </div>
            </div>

            <!-- Contact Links Section -->
            <div class="space-y-6">
                <h3 class="text-xl font-semibold text-white mb-6 text-center lg:text-left">Connect with me</h3>
                <div class="space-y-4">
                    <!-- Email -->
                    <a
                            href="mailto:jleivsuaxy@gmail.com"
                            class="flex items-center space-x-4 p-4 bg-[#2A2D3A] rounded-lg hover:bg-[#3A3D4A] transition duration-300 group"
                    >
                        <div class="bg-purple-600 p-3 rounded-full group-hover:bg-purple-700 transition duration-300 flex-shrink-0">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white font-medium">Email</p>
                            <p class="text-gray-400 text-sm break-all sm:break-normal">jleivsuaxy@gmail.com</p>
                        </div>
                    </a>

                    <!-- GitHub -->
                    <a
                            href="https://github.com/LeivSuaxy"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center space-x-4 p-4 bg-[#2A2D3A] rounded-lg hover:bg-[#3A3D4A] transition duration-300 group"
                    >
                        <div class="bg-gray-800 p-3 rounded-full group-hover:bg-gray-700 transition duration-300 flex-shrink-0">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                                      clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white font-medium">GitHub</p>
                            <p class="text-gray-400 text-sm">@LeivSuaxy</p>
                        </div>
                    </a>

                    <!-- LinkedIn -->
                    <a
                            href="https://linkedin.com/in/leivsuaxy"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center space-x-4 p-4 bg-[#2A2D3A] rounded-lg hover:bg-[#3A3D4A] transition duration-300 group"
                    >
                        <div class="bg-blue-600 p-3 rounded-full group-hover:bg-blue-700 transition duration-300 flex-shrink-0">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                      d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                                      clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white font-medium">LinkedIn</p>
                            <p class="text-gray-400 text-sm">Professional Profile</p>
                        </div>
                    </a>

                    <!-- Twitter/X (Optional) -->
                    <a
                            href="https://twitter.com/leivsuaxy"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center space-x-4 p-4 bg-[#2A2D3A] rounded-lg hover:bg-[#3A3D4A] transition duration-300 group"
                    >
                        <div class="bg-sky-500 p-3 rounded-full group-hover:bg-sky-600 transition duration-300 flex-shrink-0">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-white font-medium">Twitter</p>
                            <p class="text-gray-400 text-sm">@leivsuaxy</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>