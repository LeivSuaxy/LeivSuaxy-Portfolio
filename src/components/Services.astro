---
import ServiceCard from "./ServiceCard.astro";
import ApiIcon from "./icons/ApiIcon.astro";
import W3Icon from "./icons/W3Icon.astro";
import TelegramIcon from "./icons/TelegramIcon.astro";
import TerminalIcon from "./icons/TerminalIcon.astro";
import DatabaseIcon from "./icons/DatabaseIcon.astro";
import DesktopIcon from "./icons/DesktopIcon.astro"

const cards = [
    {
        icon: W3Icon,
        title: "Web Systems",
        description: "Modular, maintainable code that makes future enhancements easy." +
            " Integration with payments gateways, authentication systems, and third-party services.",
        categories: [
            "ASP.NET",
            "Django",
            "Nestjs"
        ]
    },
    {
        icon: ApiIcon,
        title: "API Builder",
        description: "Well-documented endpoints with Swagger/OpenAPI." +
            " Robust authentication & authorization (JWT, OAuth, Api Keys)." +
            "High availability and performance.",
        categories: [
            "DRF",
            "ASP.NET",
            "Express",
            "FastAPI"
        ]
    },
    {
        icon: TelegramIcon,
        title: "Telegram Bots",
        description: "24/7 automated alerts & notifications. " +
            "Interactive flows using inline buttons and custom menus." +
            "Integration with your external systems.",
        categories: [
            "Python",
            ".NET",
            "Nodejs"
        ]
    },
    {
        icon: TerminalIcon,
        title: "Automated Scripts",
        description: "100% automation of repetitive tasks to save you time." +
            "Integration with APIs (web scraping, email dispatch, report generation)." +
            "Scheduled jobs via cron or cloud-based task runners.",
        categories: [
            "Python",
            "Nodejs",
            "C#"
        ]
    },
    {
        icon: DatabaseIcon,
        title: "Scalable Databases",
        description: "Schema design and normalization for data consistency." +
            "Automated replication & backups." +
            " Indexing and query optimization for performance." +
            " Monitoring with tools like pgAdmin.",
        categories: [
            "PostgreSQL",
            "MongoDB",
            "MySQL"
        ]
    },
    {
        icon: DesktopIcon,
        title: "Desktop Solutions",
        description: "Native or cross-platform apps with a seamless user experience." +
            " Integration with local hardware." +
            " Offline-first capabilities with sync on reconnect.",
        categories: [
            ".NET",
            "Java",
            "Python",
        ]
    }
]


---

<div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-gray-100 mb-4 text-center mx-auto max-w-2xl">
        What I Can Do for You?
    </h1>
    <h2 class="text-3xl font-bold text-gray-100 mb-4 text-center mx-auto max-w-2xl">First things first</h2>
    <p class="text-lg text-gray-400 mb-8 text-center mx-auto max-w-2xl">
        As a software engineer, I design and implement clean,
        scalable solutions to address today's most pressing challenges.
        By prioritizing code quality and maintainability,
        I ensure each product not only meets but exceeds my clients' expectations.
    </p>

    <div class="flex flex-wrap justify-center gap-8 mt-10">
        {
            cards.map((card) => (
                    <ServiceCard icon={card.icon} title={card.title} description={card.description} categories={card.categories} />
            ))
        }
    </div>
</div>